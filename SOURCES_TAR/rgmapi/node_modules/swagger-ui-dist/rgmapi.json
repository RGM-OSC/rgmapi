{
    "openapi": "3.0.0",
    "info": {
        "title": "RGMApi",
        "version": "2.0"
    },
    "paths": {
        "/api/v2/getAuthToken": {
            "get": {
                "operationId": "getAuthToken",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "username",
                        "description": "The username, should not be a user which is mapped to LDAP",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "in": "query",
                        "name": "password",
                        "description": "The password",
                        "required": true,
                        "type": "string",
                        "format": "password"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Get a new authentication token"
                    }
                }
            }
        },
        "/api/v2/checkAuthToken": {
            "get": {
                "operationId": "checkAuthToken",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "token",
                        "description": "The token",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Check authentication token validity"
                    }
                }
            }
        }
    }
}